<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f5f5f5"
    android:id="@+id/widgetBackground"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:layout_marginLeft="16dip"
        android:layout_marginTop="16dip"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dip">
            <TextView
                android:id="@+id/widgetMedium"
                android:text="[HelloAppWidget]"
                android:textColor="#003082"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/widgetSmall"
                android:text="[Last refresh: 00:00]"
                android:textColor="#003082"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

         <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dip">
            <TextView
                android:id="@+id/widgetMedium2"
                android:text="[HelloAppWidget]"
                android:textColor="#003082"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/widgetSmall2"
                android:text="[Last refresh: 00:00]"
                android:textColor="#003082"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dip">
            <TextView
                android:id="@+id/widgetMedium3"
                android:text="[HelloAppWidget]"
                android:textColor="#003082"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/widgetSmall3"
                android:text="[Last refresh: 00:00]"
